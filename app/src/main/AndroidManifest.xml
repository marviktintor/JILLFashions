<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marvik.apps.jillfashions">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.Orders"></activity>
        <activity android:name=".activities.ActivityNewOrder">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Splash"
            android:label="@string/app_name">

        </activity>

        <provider
            android:name=".database.provider.DataProvider"
            android:authorities="com.marvik.apps.jillfashions.database.provider.DataProvider"></provider>
    </application>

</manifest>
